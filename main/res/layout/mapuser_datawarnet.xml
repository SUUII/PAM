<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_PengaturUtama"
    android:orientation="vertical">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/back"/>
            <TextView
                android:id="@+id/judulgan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="24sp"
                android:text="NAMA WARNET"
                android:layout_marginEnd="35dp"
                />
        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="130dp">
        <TextView
            android:id="@+id/alamat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text=""
            android:textSize="24sp" />
    </ScrollView>

        <LinearLayout
            android:layout_marginTop="200dp"
            android:layout_width="match_parent"
            android:layout_height="35dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:text="Harga/Jam : "
                android:textSize="24sp" />
            <TextView
                android:id="@+id/hargaperjam"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:text="Rp. 5.000,-"
                android:textAlignment="viewEnd"
                android:textSize="24sp" />
        </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="240dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:text="Jam Buka : "
            android:textSize="24sp" />
        <TextView
            android:id="@+id/jambuka"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:text="jambuka"
            android:textAlignment="viewEnd"
            android:textSize="24sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="280dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:text="Jam Tutup : "
            android:textSize="24sp" />
        <TextView
            android:id="@+id/jamtutup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:text="jamtutup"
            android:textAlignment="viewEnd"
            android:textSize="24sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="320dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spesifikasi pc "
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/banyak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="155dp"
            android:text="(Tersedia 999 pc)"
            android:textSize="24sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="360dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:text="Processor : "
            android:textSize="24sp" />
        <TextView
            android:id="@+id/processor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:text="Processor"
            android:textAlignment="viewEnd"
            android:textSize="24sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="400dp"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:text="VGA : "
            android:textSize="24sp" />
        <TextView
            android:id="@+id/vga"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:text="VGA"
            android:textAlignment="viewEnd"
            android:textSize="24sp" />
    </RelativeLayout><RelativeLayout
    android:layout_marginTop="440dp"
    android:layout_width="match_parent"
    android:layout_height="35dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:text="RAM : "
        android:textSize="24sp" />
    <TextView
        android:id="@+id/ram"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_alignParentEnd="true"
        android:text="RAM"
        android:textAlignment="viewEnd"
        android:textSize="24sp" />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sewa PC"
            android:id="@+id/sewapc"
            android:textSize="24sp" />
    </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:textSize="24sp"
            android:id="@+id/listgame"
            android:text="Lihat List Game"/>
    <TextView
        android:id="@+id/gamenya"
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#fff"
        android:textSize="24sp"
        android:visibility="invisible" />
</RelativeLayout>
